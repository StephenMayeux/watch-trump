    <meta name="description" content="The Watch Trump Blog preserves Trump's tweets before he deletes them.">
    <meta name="author" content="Stephen Mayeux, ESL Teacher Turned Full Stack Developer">

    <title>The Watch Trump Blog</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">>

